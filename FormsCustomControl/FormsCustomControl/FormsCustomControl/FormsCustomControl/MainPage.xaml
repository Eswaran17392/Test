<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:myLocal="clr-namespace:FormsCustomControl"
             x:Class="FormsCustomControl.MainPage">

    <StackLayout Padding="30">
        <myLocal:FormsCustomLayout HeightRequest="60" WidthRequest="60" AutomationId="MyAutomation" >
            <myLocal:FormsCustomLayout.InputView>
                <Label Text="custom label" TextColor="Red" WidthRequest="60" HeightRequest="60" />
            </myLocal:FormsCustomLayout.InputView>
        </myLocal:FormsCustomLayout>
    </StackLayout>

</ContentPage>
